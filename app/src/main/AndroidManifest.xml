<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="commm.example.yorman.trabajo">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Informacion" />

        <intent-filter>
            <action android:name="android.intent.action.INFORMACION" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>

        <activity
            android:name=".menus"
            android:label="@string/title_activity_menus"
            android:theme="@style/AppTheme.NoActionBar" />

        <intent-filter>
            <action android:name="android.intent.action.MENUS" />

            <category android:name="android.intent.category.DEFAULT" />
        </intent-filter>

        <activity android:name=".buscar" />
        <activity
            android:name=".crearoferta"
            android:label="@string/title_activity_crearoferta"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>